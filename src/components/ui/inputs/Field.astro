---
import { twMerge } from 'tailwind-merge';

// Extraer props
const { class: className = "", ...rest } = Astro.props;

// Clases base del input
const baseClasses = "w-full px-6 h-[42px] border bg-transparent font-agrandir border-border rounded-full text-sm text-black placeholder-gray-400 outline-none focus:ring-2 focus:ring-primary focus:border-primary transition";

// Combinar clases
const finalClass = twMerge(baseClasses, className);
---

<input  class={finalClass} {...rest} />
