import { twMerge } from 'tailwind-merge';

// Props
const { class: className = "" } = Astro.props;

// Clases base
const baseClasses = "text-xl font-agrandir-bold text-white";

// Combinar usando twMerge
const finalClass = twMerge(baseClasses, className);
---

<h4 class={finalClass}>
  <slot />
</h4>
