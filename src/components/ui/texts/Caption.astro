---
// Importar la funci√≥n
import { twMerge } from 'tailwind-merge';

// Props
const { class: className = "" } = Astro.props;

// Clases base
const baseClasses = "text-xs font-agrandir-bold text-secondary";

// Combinar usando twMerge
const finalClass = twMerge(baseClasses, className);
---

<span class={finalClass}>
  <slot />
</span>
